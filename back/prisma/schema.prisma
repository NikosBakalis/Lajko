// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  FACULTY
  SECRETARY
}

enum ThesisStatus {
  OPEN
  ASSIGNED
  COMPLETED
  CANCELLED
}

model User {
  id             Int      @id @default(autoincrement())
  username       String   @unique
  password       String
  email          String   @unique
  fullName       String
  role           UserRole
  studentId      String?  @unique
  postalAddress  String?
  mobilePhone    String?
  landlinePhone  String?
  // Thesis relationships
  facultyTheses  Thesis[] @relation("FacultyTheses")
  supervisingTheses Thesis[] @relation("SupervisingFaculty")
  selectedTheses Thesis[] @relation("StudentSelections")
  assignedThesis Thesis?  @relation("AssignedThesis")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Thesis {
  id             Int      @id @default(autoincrement())
  title          String
  description    String
  pdfUrl         String?  // Optional field for PDF attachment
  status         ThesisStatus @default(OPEN)
  facultyId      Int
  faculty        User     @relation("FacultyTheses", fields: [facultyId], references: [id])
  supervisingFaculty User[] @relation("SupervisingFaculty")
  selectedBy     User[]   @relation("StudentSelections")
  assignedToId   Int?     @unique
  assignedTo     User?    @relation("AssignedThesis", fields: [assignedToId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}